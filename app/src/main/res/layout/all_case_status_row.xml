<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_case_code"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/i_130" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_case_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="WAC1590557605"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="August 31, 2015"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView_case_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case was Received"
            android:textColor="#65000000"
            android:textSize="14dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated: Apr 02, 2016 at 11:29:34 PM"
            android:textColor="@android:color/holo_red_light"
            android:textSize="12dp" />

    </LinearLayout>

</LinearLayout>
